generator client {
  provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum TransactionType {
  income
  expense
}

enum MembershipRole {
  owner
  admin
  viewer
}

model Transaction {
  id          Int              @id @default(autoincrement())
  projectId   Int
  project     Project          @relation(fields: [projectId], references: [id])
  contactId   Int?
  contact     Contact?         @relation(fields: [contactId], references: [id])
  caseId      Int?
  case        Case?            @relation(fields: [caseId], references: [id])
  type        TransactionType
  amount      Decimal
  currency    String           @default("UAH")
  category    String?
  description String?
  publicFormId Int?
  publicForm   PublicForm?     @relation(fields: [publicFormId], references: [id])
  happenedAt  DateTime         @default(now())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([projectId, happenedAt])
  @@index([projectId, type])
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  publicKey String   @unique
  config    Json?

  createdByUserId Int?
  createdByUser   User? @relation("ProjectCreatedBy", fields: [createdByUserId], references: [id])

  memberships   Membership[]
  invites       ProjectInvite[]
  allowedOrigins ProjectAllowedOrigin[]
  contacts      Contact[]
  cases         Case[]
  transactions Transaction[]
  publicForms  PublicForm[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectAllowedOrigin {
  id        Int      @id @default(autoincrement())
  projectId Int
  origin    String

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, origin])
  @@index([projectId])
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  // "role" is per-project via Membership.role

  memberships Membership[]
  createdProjects Project[] @relation("ProjectCreatedBy")
  invitesCreated  ProjectInvite[] @relation("InviteCreatedBy")
  invitesUsed     ProjectInvite[] @relation("InviteUsedBy")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Membership {
  id        Int            @id @default(autoincrement())
  userId    Int
  projectId Int
  role      MembershipRole

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, projectId])
  @@index([projectId, role])
}

model ProjectInvite {
  id        Int            @id @default(autoincrement())
  projectId Int
  token     String         @unique
  role      MembershipRole
  expiresAt DateTime?
  usedAt    DateTime?
  usedByUserId Int?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdByUserId Int
  createdByUser   User    @relation("InviteCreatedBy", fields: [createdByUserId], references: [id], onDelete: Cascade)
  usedByUser      User?   @relation("InviteUsedBy", fields: [usedByUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId, usedAt])
}

model Contact {
  id         Int      @id @default(autoincrement())
  projectId  Int
  project    Project  @relation(fields: [projectId], references: [id])
  name       String
  email      String?
  phone      String?
  notes         String?
  cases         Case[]
  transactions Transaction[]
  createdAt     DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([id, projectId])
}

model Case {
  id          Int      @id @default(autoincrement())
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  contactId   Int?
  contact     Contact? @relation(fields: [contactId], references: [id])
  title       String
  description String?
  internalNote String?
  status      String
  source      String?
  publicFormId Int?
  publicForm   PublicForm? @relation(fields: [publicFormId], references: [id])
  clientRequestId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
  tasks        Task[]

  @@unique([id, projectId])
  @@unique([projectId, clientRequestId])
  @@index([projectId, status])
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)

  caseId    Int
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PublicForm {
  id        Int      @id @default(autoincrement())
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])

  formKey     String   // e.g. "lead", "donation", "booking", "feedback"
  title       String
  type        String   // semantic type of form (lead/donation/booking/feedback/custom)
  description String?
  config      Json?
  isActive    Boolean  @default(true)

  cases        Case[]
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, formKey])
  @@index([projectId, type])
}

