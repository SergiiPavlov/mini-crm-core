generator client {
  provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum TransactionType {
  income
  expense
}

model Transaction {
  id          Int              @id @default(autoincrement())
  projectId   Int
  project     Project          @relation(fields: [projectId], references: [id])
  contactId   Int?
  contact     Contact?         @relation(fields: [contactId], references: [id])
  caseId      Int?
  case        Case?            @relation(fields: [caseId], references: [id])
  type        TransactionType
  amount      Decimal
  currency    String           @default("UAH")
  category    String?
  description String?
  happenedAt  DateTime         @default(now())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([projectId, happenedAt])
  @@index([projectId, type])
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  config    Json?
  users         User[]
  contacts      Contact[]
  cases         Case[]
  transactions Transaction[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       String
  projectId  Int
  project    Project  @relation(fields: [projectId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Contact {
  id         Int      @id @default(autoincrement())
  projectId  Int
  project    Project  @relation(fields: [projectId], references: [id])
  name       String
  email      String?
  phone      String?
  notes         String?
  cases         Case[]
  transactions Transaction[]
  createdAt     DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([id, projectId])
}

model Case {
  id          Int      @id @default(autoincrement())
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  contactId   Int?
  contact     Contact? @relation(fields: [contactId], references: [id])
  title       String
  description String?
  internalNote String?
  status      String
  source      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
  tasks        Task[]

  @@unique([id, projectId])
  @@index([projectId, status])
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)

  caseId    Int
  case      Case     @relation(fields: [caseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

